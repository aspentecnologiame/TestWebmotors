<!DOCTYPE html>
<html ng-app="webApp">
<head>
    <base href="/" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Marcos Costa</title>
    @Styles.Render("~/lib/fontawesome")
    @Styles.Render("~/lib/ui-grid")
    @Styles.Render("~/lib/rm-datepicker")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/adminlte")

    @Scripts.Render("~/bundles/globals")

    @Scripts.Render("~/bundles/angularJS")
    @Scripts.Render("~/bundles/angularUI")
    @Scripts.Render("~/bundles/ui-select")
    @Scripts.Render("~/bundles/app")
    @Scripts.Render("~/bundles/ui-grid")
    @Scripts.Render("~/bundles/rm-datepicker")
    @Scripts.Render("~/bundles/directives")
    @Scripts.Render("~/bundles/services")
    @Scripts.Render("~/bundles/factories")
    @Scripts.Render("~/bundles/filters")
    @Scripts.Render("~/bundles/modal")
    @Scripts.Render("~/bundles/controllers")


    <script>localStorage.setItem('token', '@ViewBag.BearerToken');</script>

</head>
<body class="hold-transition sidebar-mini">

    <div class="wrapper" ng-controller="layoutController as layoutCtrl">
        <div ng-show="loader" class="div-main"><div class="loader"></div></div>
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link lnk-sair" href="../../" onclick="localStorage.clear();">
                        Sair
                    </a>
                </li>
            </ul>
        </nav>
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/system/admin" class="brand-link">
                <img src="~/Images/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text card-title-font">Marcos Costa</span>
            </a>
            <div class="user-panel mt-3 pb-3 mb-3 d-flex" />
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user (optional) -->
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item" ng-click="layoutCtrl.SetActive('index')">
                            <a href="{{layoutCtrl.BaseUrl}}" class="nav-link" ng-class="layoutCtrl.Index == true ? 'active' : ''">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Cadastro de Veículo
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Versão</b> 1.0.0
            </div>
            <strong>Copyright &copy; 2021 <a href="https://github.com/mostwanteddtm">Marcos Roberto da Costa</a>.</strong> Todos os direitos reservados.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
        <!-- ./wrapper -->
    </div>
    @RenderSection("scripts", required: false)

</body>

</html>
